{
  "name": "vod-service",
  "version": "0.0.0",
  "private": true,
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint && npm run copy-static-assets",
    "serve": "nodemon dist/bin/vod-service.js",
    "watch-serve": "tsc && nodemon dist/bin/vod-service.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-serve\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "jesttest": "jest tests/controllers/**/*.test.ts",
    "test": "mocha --require ts-node/register tests/**/*.test.ts",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/bin/vod-service.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^8.2.0",
    "exceljs": "^4.1.1",
    "express": "~4.16.1",
    "express-useragent": "^1.0.13",
    "http-errors": "~1.6.3",
    "i": "^0.3.6",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "nodemailer": "^6.6.3",
    "pg": "^8.7.1",
    "regenerator-runtime": "^0.13.7",
    "request": "^2.88.2",
    "request-promise": "^4.2.4",
    "retriable-download": "^3.0.0",
    "sequelize": "^6.6.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.28",
    "@types/concurrently": "^4.1.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-useragent": "^1.0.0",
    "@types/http-errors": "^1.6.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.20.20",
    "@types/request": "^2.48.3",
    "@types/request-promise": "^4.1.44",
    "@types/shelljs": "^0.8.5",
    "@types/source-map-support": "^0.5.0",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "nodemon": "^1.19.4",
    "npm": "^6.13.0",
    "onchange": "^6.1.0",
    "serve": "^11.2.0",
    "shelljs": "^0.8.3",
    "source-map-support": "^0.5.16",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.2",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^4.3.5"
  }
}
